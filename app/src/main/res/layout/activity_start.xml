<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button_basic_collapse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Basic Collapsing Toolbar"
        />

    <Button
        android:id="@+id/button_collapse_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Collapsing Image"
        />

    <Button
        android:id="@+id/button_collapse_image_custom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Collapsing Image custom"
        />

</LinearLayout>